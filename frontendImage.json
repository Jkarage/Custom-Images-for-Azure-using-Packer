{
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}"
  },
  "builders": [{
    "type": "azure-arm",

    "client_id": "{{user `client_id`}}",
    "client_secret": "{{user `client_secret`}}",
    "subscription_id": "{{user `subscription_id`}}",

    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "16.04-LTS",

    "managed_image_resource_group_name": "packertest",
    "managed_image_name": "MyUbuntuImage",

    "azure_tags": {
        "org": "NOTTECHLAB",
        "task": "image deployment"
    },

    "location": "South Central US",
    "vm_size": "Standard_DS2_v2"
  }],
  "provisioners": [{
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
    "inline": [
      "sudo apt-get -y update",
      "curl -sL https://deb.nodesource.com/setup_10.x -o nodesource_setup.sh",
      "sudo bash nodesource_setup.sh",
      "sudo apt-get -y install nodejs",
      "sudo apt install npm",
      "git clone https://github.com/Jkarage/work_sample_1.git",
      "cd work_sample_1/bucketlist-react",
      "sudo npm install",
      "sudo npm install -g gulp-cli",
      "sudo gulp sass",
      "git clone https://github.com/Jkarage/Custom-Images-for-Azure-using-Packer.git",
      "cd Custom-Images-for-Azure-using-Packer",
      "sudo cp start.sh /usr/bin/start.sh",
      "sudo cp startreactapp.service /lib/systemd/system/startreactapp.service",
      "sudo chmod +x /usr/bin/start.sh",
			"sudo systemctl enable startreactapp.service"

      "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
    ],
    "inline_shebang": "/bin/sh -x",
    "type": "shell"
  }]
}
